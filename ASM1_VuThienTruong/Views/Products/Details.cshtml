@model ASM1_VuThienTruong.Models.Product

<h2>Chi tiết sản phẩm</h2>

<div>
    <h4>@Model.Name</h4>
    <p><strong>Giá:</strong> @Model.Price</p>
    <p><strong>Tồn kho:</strong> @Model.Stock</p>
    <p><strong>Danh mục:</strong> @Model.Category?.Name</p>
    <p><strong>Mô tả:</strong> @Model.Description</p>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="@Model.Name" width="300" />
    }
</div>
<br />
<a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">Sửa</a>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
