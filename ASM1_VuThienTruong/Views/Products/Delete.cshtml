@model ASM1_VuThienTruong.Models.Product

<h2>Xóa sản phẩm</h2>

<h4>Bạn có chắc muốn xóa sản phẩm này?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Tên</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Giá</dt>
    <dd class="col-sm-10">@Model.Price</dd>

    <dt class="col-sm-2">Tồn kho</dt>
    <dd class="col-sm-10">@Model.Stock</dd>

    <dt class="col-sm-2">Danh mục</dt>
    <dd class="col-sm-10">@Model.Category?.Name</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ProductId" />
    <input type="submit" value="Xóa" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
