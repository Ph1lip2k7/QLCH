@model IEnumerable<ASM1_VuThienTruong.Models.Product>

@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="text-center mb-4">
    <h1 class="display-4">Danh sách sản phẩm</h1>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card h-100 shadow-sm">
                <img src=" ~ /images/@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text text-danger fw-bold mt-auto">@product.Price.ToString("N0") VNĐ</p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.ProductId" class="btn btn-primary w-100">Thêm vào giỏ</a>
                </div>
            </div>
        </div>
    }
</div>